<Window x:Class="Workday.WorkdayView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workday"
        mc:Ignorable="d"
        Title="Workday" 
        Height="200" Width="300" MinHeight="200" MinWidth="300"
        ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="{Binding WorkdayButtonContent, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="0" Command="{Binding WorkdayCommand}"/>
        <Button Content="{Binding WorkingButtonContent, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="0" Command="{Binding WorkingCommand}"/>
        <TextBox Grid.Row="2" Grid.Column="0" Text="Current block"/>
        <TextBox Grid.Row="3" Grid.Column="0" Text="Daily total"/>

    </Grid>
</Window>
